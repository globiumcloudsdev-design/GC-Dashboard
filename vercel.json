{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/cron/auto-attendance",
      "methods": ["GET", "POST"],
      "headers": {
        "Authorization": "Bearer ${process.env.CRON_SECRET}"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron/auto-attendance",
      "schedule": "*/30 * * * *"
    }
  ]
}